// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String         @id @default(cuid())
  name        String
  slug        String         @unique
  description String?        @db.Text
  price       Int            // Price in PKR
  category    Category       @relation(fields: [categoryId], references: [id])
  categoryId  String
  images      ProductImage[]
  featured    Boolean        @default(false)
  inStock     Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([categoryId])
  @@index([featured])
  @@index([inStock])
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  image       String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ProductImage {
  id        String  @id @default(cuid())
  url       String
  key       String? // UploadThing file key for deletion
  alt       String?
  order     Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  @@index([productId])
}

model Admin {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model SiteSettings {
  id        String  @id @default("default")
  siteName  String  @default("Ahmad Rafay Handwork")
  tagline   String  @default("Beautiful Embroidery, Honest Prices")
  whatsapp  String  @default("03199119572")
  instagram String  @default("@ahmadrafayhandwork")
  facebook  String  @default("Ahmad Rafay Handwork")
  aboutText String? @db.Text
  heroTitle String? @default("Ahmad Rafay Handwork")
  heroSubtitle String? @default("Traditional hand-embroidered shirts & trousers from Rajanpur")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
